<launch>

  <!-- This file makes it easy to include the settings for sensor managers -->
  <arg name="robot_model" default="locobot_wx250s"/>
  <arg name="robot_name"  default="locobot"/>
  <arg name="use_camera"  default="true"/>

  <group if="$(arg use_camera)">
    <!-- Params for 3D sensors config -->
    <!-- Load the robot specific sensor manager; this sets the moveit_sensor_manager ROS parameter -->
    <!-- Params for the octomap monitor -->
    <param name="octomap_frame" type="string" value="map" /> 
    <param name="octomap_resolution" type="double" value="0.0025" /> <!--Maximum accurancy in mapping-->
    <param name="max_range" type="double" value="4.0" /> <!--Measurement range of the camera-->

    <rosparam command="load" file="$(find moveit_custom)/config/sensors_3d_depth_map.yaml" />
  </group>

</launch>
